{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],
    "lib": ["es2018", "dom"],
    "baseUrl": ".",
    "paths": {
      "@cs/common-ui": ["libs/common-ui/src/index.ts"],
      "@cs/fosdem-lib": ["libs/fosdem-lib/src/index.ts"]
    }
  },
  "exclude": ["node_modules/@types", "node_modules", "tmp", "apps/**/*.spec.ts", "libs/**/*.spec.ts"]
}
